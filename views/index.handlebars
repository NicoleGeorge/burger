<div class="container">
<div class="row">
  <div class="col-md-12 text-center" id="top-setion">
    <img src="../public/assets/css/img/mcdowells-logo.jpg" alt="McDowell's burgers logo" />
      <h1>Welcom to McDowell's</h1>
  </div>
  <div class="col-md-6 text-center" class="order">
    <div class="row">
      <h2>Please Place your order with Maurice</h2>
      {{#each burger_data}}
      {{#unless this.devoured}}
        <div class="col-md-9 text-center">
          <pre>{{this.id}}. {{this.burger_name}}
          </pre>
        </div>
        <div class="col-md-3 text-center">
          <form class="devour-form button-size">
            <input input type="hidden" class="burger_id" type="text" value="">
            <button type="submit" class="btn btn-defaut"></button>
          </form>
        </div>
        {{/unless}}
      {{/each}}
    </div>
  </div>

</div>





<ul>
  
      {{> cats/cat-block sleep=true}}

</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>


<h2>What burger would you like?</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="eat">Devour?</label><br>
    <input type="radio" name="eat" value="1" checked> YUMMY!<br>
    <input type="radio" name="eat" value="0"> Held up at gun point
  </div>

  <button type="submit">Order Burger</button>
</form>
</div>